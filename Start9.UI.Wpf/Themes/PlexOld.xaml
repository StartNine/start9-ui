                        </MultiDataTrigger-->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsWindowVisible" Value="True"/>
                                <Condition Property="Opacity" Value="1"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="ContentPlanerator" Property="Visibility" Value="Collapsed"/>
