                                <!--{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource DoubleToFractionOfDoubleConverter}}-->
                                <Grid>
                                    <Grid x:Name="ClipGrid" Margin="0" ClipToBounds="True">
                                        <Grid.OpacityMask>
